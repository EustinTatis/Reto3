<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagenInicial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/inicial"
                    android:translationY="-20dp" />

                <Button
                    android:id="@+id/boton1"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:background="@color/naranja_primario"
                    android:fontFamily="sans-serif-black"
                    android:text="PROMOCIONES"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:translationX="100dp"
                    android:translationY="-80dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/font3"
                    android:paddingLeft="10dp"
                    android:text="Pide, nosotros te lo llevamos"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:translationY="-50dp" />

                <ImageView
                    android:id="@+id/imagenInicial2"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/inicial2"
                    android:translationY="-80dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/font3"
                    android:paddingLeft="10dp"
                    android:text="Party Food en tus manos"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:translationY="-60dp" />

                <ImageView
                    android:id="@+id/imagenInicial3"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/inicial3"
                    android:translationY="-90dp" />

                <TextView
                    android:id="@+id/texto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="PARTY FOOD RESTAURANTE"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:translationY="-10dp" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calle 32 #15 - 15, Corozal - Sucre"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:translationY="-15dp" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Todos los derechos reservados."
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:translationY="-20dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>